<li class='clearfix record <%= cycle("on", "on-hover") %>' id="<%= dom_id(happening) -%>">
  <span class='title'>
    <%= happening.title %>
    <span class="preview">&nbsp;</span>
  </span>
  <span class='actions'>
    <%= link_to refinery_icon_tag("application_go.png"), happening_path(happening),
        :title => t('.view_live_html'),
        :target => "_blank" %>
    <%= link_to refinery_icon_tag("application_edit.png"), edit_admin_happening_path(happening),
         :title => t('.edit') %>
    <%= link_to refinery_icon_tag("delete.png"), admin_happening_path(happening),
        :class => "cancel confirm-delete",
        :title => t('.delete'),
        :confirm => t('message', :scope => 'shared.admin.delete', :title => happening.title),
        :method => :delete %>
  </span>
</li>
