<!DOCTYPE html>
<html>
<head>
  <link rel="shortcut icon" href="images/log.bmp" type="image/x-icon" />
  <title>NERIST</title>
  <%= stylesheet_link_tag :all %>
  <%= javascript_include_tag :all %>
  <%= csrf_meta_tag %>
  <script type="text/javascript">
$(document).ready(function(){
  $("#department").mouseover(function(){
  $(".submenu").slideUp();
  $("#departments").slideDown(500);
  });
 $("#Institutes").mouseover(function(){
  $(".submenu").slideUp();
  $("#Institute").slideDown(500);
  });
  $("#Academics").mouseover(function(){
  $(".submenu").slideUp();
  $("#Academic").slideDown(500);
  });
  $("#Facilitie").mouseover(function(){
  $(".submenu").slideUp();
  $("#Facilities").slideDown(500);
  });
  $("#Student").mouseover(function(){
  $(".submenu").slideUp();
  $("#Students").slideDown(500);
  });
  $("#homebar").mouseover(function(){
  $(".submenu").slideUp();
  });
  $("#dept").mouseover(function(){
  $(".submenu").slideUp();
  $("#subhome").slideToggle(500);
  });
  $("#head").mouseover(function(){
  $(".submenu").slideUp();
  });
  $("#content").mouseover(function(){
  $(".submenu").slideUp();
  });
  $(".but").mouseover(function(){
  $(".submenu").slideUp();
  });
});

</script>
</head>
<body>
  <div>
    <div class="main">
      <div id="head"><img src="images/logo.bmp" width=100% /></div>
      <div id="menu">
        <div id="barone"><table>
            <tr><td>
                <a href="/other"><div class="but">Login</div></a></td><td>
